<style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap');
    body {
        background-color: #fff;
        font-family: 'DM Sans', sans-serif;
    }
    .table {
        background-color: #F1F4FC;
        border-radius: 10px;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        overflow: hidden;
    }

    .table thead, .table tbody {
        border-radius: 10px;
    }
    .table thead th {
        border-bottom-color: #D6DDF8;
        font-weight: 700;
    }
    .table-bordered td, .table-bordered th{
        border: 2px solid #D6DDF8;
        letter-spacing: 0.05em;
        border-radius: 10px;
    }

    .table-striped tbody tr:nth-of-type(odd) { 
        background-color: #EBEEFB;
    }
    .table-hover tbody tr:hover {
        background-color: #E1E6F9;
    }

    .download, .answer {
        color: #5E7CE2;
        font-weight: 500;
        cursor: pointer !important;
    }
    .download:hover {
        color: #5E7CE2;
    }
</style>

<div class="container">
    <table class="table table-striped table-hover table-bordered table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Document</th>
                <th  class="text-center">Cavab</th>
                <th  class="text-center">Views</th>
            </tr>
        </thead>
        <tbody>
            {{#each doc}}
            <tr>
                <td>{{this.sender}}</td>
                <td>{{this.sendingCompany}}</td>
                <td>{{this.docName}}</td>
                <td class="text-center">
                    <a class="text-decoration-none download" href="{{this.docPath}}" download> 
                        <svg fill="#5E7CE2" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24"><path d="M12 21l-8-9h6v-12h4v12h6l-8 9zm9-1v2h-18v-2h-2v4h22v-4h-2z"/></svg> 
                        Download
                    </a>
                </td>
                <td class="text-center">
                    <a href="{{this.docPath}}">Review</a></td>
    
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>