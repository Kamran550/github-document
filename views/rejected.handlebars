<style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap');
    body {
        background-color: #fff;
        font-family: 'DM Sans', sans-serif;
    }
    .table {
        background-color: #F1F4FC;
        border-radius: 12px;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        overflow: hidden;
    }

    .table thead, .table tbody {
        border-radius: 10px;
    }
    .table thead th {
        border-bottom-color: #D6DDF8;
        font-weight: 700;
    }
    .table-bordered td, .table-bordered th{
        border: 2px solid #D6DDF8;
        letter-spacing: 0.05em;
        border-radius: 10px;
    }

    .table-striped tbody tr:nth-of-type(odd) { 
        background-color: #EBEEFB;
    }
    .table-hover tbody tr:hover {
        background-color: #E1E6F9;
    }
</style>

<div class="container">
    <table class="table table-striped table-hover table-bordered table-responsive-md"">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Document</th>
                <th colspan="5" class="text-center">Cavab</th>
            </tr>
        </thead>
        <tbody>
            {{#each doc}}
            <tr>
                <td>{{this.sender}}</td>
                <td>{{this.sendingCompany}}</td>
                <td>{{this.docName}}</td>
                <td>
                    <a href="">Download</a>
                </td>
                <td>
                    <a href="">kncwucwiuhwifuhw</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>