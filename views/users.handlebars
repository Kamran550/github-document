<style>
    @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap');
    body {
        background-color: #fff;
        font-family: 'DM Sans', sans-serif;
    }
    .table {
        background-color: #F1F4FC;
        border-radius: 10px;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }

    .table thead, .table tbody {
        border-radius: 10px;
    }
    .table thead th {
        border-bottom-color: #D6DDF8;
        font-weight: 700;
    }
    .table-bordered td, .table-bordered th{
        border: 2px solid #D6DDF8;
        letter-spacing: 0.05em;
        border-radius: 10px;
    }

    .table-striped tbody tr:nth-of-type(odd) { 
        background-color: #EBEEFB;
    }
    .table-hover tbody tr:hover {
        background-color: #E1E6F9;
    }
       .btnAdminCard
    {
        background-color: #fff;
        color: #3b6ffd;
        width: fit-content;
        border-radius: 15px;
        border-color: #3b6ffd;
    }
    .btnAdminCard:hover
    {
        background-color: #3b6ffd;
        color: #fff;
        border-color: #3b6ffd;
    }
    .containerAdminCard
    {
        display: flex;
        flex-direction: row;
        justify-content: center;
    }
    .txtAdminCardH
    {
        text-align: center;
        margin-bottom: 2rem;
         color: #3b6ffd;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    .adminCard
    {
        display: flex;
        flex-direction: column !important;
        justify-content: center;
        align-items: center;
        position: relative;
        margin-top: 8rem;
        margin-bottom: 10rem;
        padding: 4rem;
        width: 75%;
    }
    
    .card
    {
        background-color: #fff !important;
        position: relative;
        z-index: 400;
        border-radius: 20px;
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    .card:hover {
      box-shadow: 10px 15px 10px -10px rgba(31, 31, 31, 0.5);
      transition: all 0.5s ease;
    }
</style>

<div class="container">
    {{#if result}}

    <table class="table table-striped table-hover table-bordered table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Company</th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
            <tr>
                <td>{{this.firstname}}</td>
                <td>{{this.lastname}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>{{this.Companies.name}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{/if}}
    {{#if q}}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Position</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each q}}
            <tr>
                <td>{{this.firstname}}</td>
                <td>{{this.lastname}}</td>
                <td>{{this.position}}</td>
                <td>{{this.email}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
    {{/if}}
    {{#if pagination}}

    <div class="pagination">
        {{#each pagination}}
        <a href="/users/{{this}}" class="btnofpag">{{this}}</a>
        {{/each}}
    </div>
    {{/if}}

</div>

 <div class="containerAdminCard">
         <div class="card adminCard">
          <h1 class="text-center txtAdminCardH">Admin üçün keçidlər</h1>
<div class="container d-flex justify-content-center align-items-center">
    <div class="row">
      <div class="col">
        <a class="btn btnAdminCard" href="/users/1">Users</a>

      </div>
      <div class="col">
        <a class="btn btnAdminCard" href="/adduser">Add User</a>

      </div>
      <div class="col">
        <a class="btn btnAdminCard" href="/admin">Admin</a>

      </div>
    </div>
  </div>
     </div>
